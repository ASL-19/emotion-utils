{
  "name": "@asl-19/emotion-utils",
  "version": "0.2.1",
  "description": "Shared Emotion utility functions for ASL19 projects",
  "author": {
    "name": "Grant Heaslip",
    "email": "grant@asl19.org",
    "url": "https://asl19.org/"
  },
  "license": "GPL-3.0-or-later",
  "repository": "ASL-19/emotion-utils",
  "files": [
    "dist/**/*.js",
    "types/**/*.d.ts"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "types/emotion-utils.public.d.ts",
  "sideEffects": false,
  "scripts": {
    "api-extractor:check": "api-extractor run --verbose",
    "api-extractor:update": "api-extractor run --local --verbose",
    "api-documenter:update": "api-documenter markdown --input-folder ./api-extractor --output-folder ./docs",
    "build": "npm-run-all -l -s clean-dist -p build-cjs build-esm",
    "build-and-update-api": "npm-run-all -l -s build api-extractor:update api-documenter:update",
    "build-cjs": "tsc --project tsconfig-cjs.json",
    "build-esm": "tsc --project tsconfig-esm.json",
    "build-check-and-lint": "npm-run-all -l -s build -p api-extractor:check eslint",
    "prepublishOnly": "npm run build",
    "clean-dist": "rm -rf ./dist/",
    "eslint": "eslint . --ext js,ts",
    "stylelint": "stylelint ./src/**/*.ts*"
  },
  "devDependencies": {
    "@asl-19/eslint-config": "^0.4.0",
    "@asl-19/stylelint-config": "^0.3.0",
    "@emotion/react": "^11.4.1",
    "@microsoft/api-documenter": "^7.13.39",
    "@microsoft/api-extractor": "^7.18.5",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "eslint": "^7.32.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "stylelint": "^13.13.1",
    "stylelint-order": "^4.1.0",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "@emotion/react": "^11.0.0"
  }
}
